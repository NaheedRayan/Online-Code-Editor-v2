<body>

    <div class="bigbox">

        <div class="header">
            <!-- nav bar -->
            <%- include('../partials/navbar'); %>
        </div>

        <!-- for flash messages -->
        <%- include('../partials/flash'); %>

        <main class="main">

            <div class="box">
                <div class="box_options">

                    <div class="filename1">code</div>
                    <div class="filename2">input</div>
                    <div class="filename3">output</div>
                    <!-- <div class="min_max_button">+</div> -->
                    <span class="fi-rr-interrogation"></span>
                    <!-- <div class="about">?</div> -->
                </div>
                <div class="box-area" id="box-area">


                    <div class="editor" id="editor"></div>
                    <div class="line1" id="line1"></div>
                    <div class="options_menu" id="options_menu">
                        <span class="hide_stdin">Hide stdin</span>

                        <select class="language" onchange="change_language(event)">
                            <option value="" disabled selected hidden>Select Language</option>
                            <option value="c">C</option>
                            <option value="cpp">C++</option>
                            <option value="python3">Python3</option>
                            <option value="openJDK-8">Java-8</option>
                            <option value="javascript">JavaScript</option>

                        </select>


                        <!-- <span data-model1-target="#model1" class="load"></span> -->

                        <span data-modal-target="#modal1" class="load">Load</span>
                        <span data-modal-target="#modal2" class="fi-rr-disk"></span>
                        <span data-modal-target="#modal3" class="fi-rr-settings"></span>
                        <span class="run_button">RUN</span>

                        <div class="modal1" id="modal1">


                            <div class="modal1-header">
                                <div class="title">Load file</div>
                                <button data-close-button="#modal1" class="close-button">&times;</button>
                            </div>

                            <!-- invisible div that hold data -->
                            <% if (session.passport) { %>
                            <h2 id="data-hidden-session-id" data-hidden-session-id=<%= session.passport.user %>></h2>
                            <h2 id="data-hidden-file-id" data-hidden-file-id="0"></h2>
                            <% } %>

                            <div class="modal1-body">


                                <!-- generated code from js -->

                                <script>
                                    // console.log(filedata)
                                    // // console.log("generated code");
