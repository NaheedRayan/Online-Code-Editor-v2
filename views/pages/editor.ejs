                                    // {
                                    //     console.log("clicked")
                                    // }
                                </script>

                            </div>
                        </div>

                        <div class="modal2" id="modal2">
                            <div class="modal1-header">
                                <div class="title">Save File</div>
                                <button data-close-button="#modal2" class="close-button">&times;</button>
                            </div>
                            <div class="modal2-body">

                                <br>
                           
                                <label class="form-label">Save File:</label>
                                <br>
                                <button id="save-button" class="btn btn-primary">Save</button>
                                <br>
                                <br>
                                <br>
                                
                
                                <div class="mb-3">
                                    <label class="form-label">Enter File Name:</label>
                                    <input type="text" class="form-control" id="file_name22">
                                </div>

                                <button id="save-as-button" class="btn btn-primary">Save As</button>
                            

                              

                            </div>
                        </div>

                        <div class="modal3" id="modal3">
